<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">
  <link rel="icon" href="../../../../favicon.ico">

  <title>Your Matches</title>

  <!-- Bootstrap core CSS -->
  <link href="../../../../dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom styles for this template -->
  <link href="album.css" rel="stylesheet">
</head>

<section class="jumbotron text-center" style="height: 220px">
  <div class="container">
    <h1 class="jumbotron-heading">Your Matches</h1>
    <p class="lead text-muted">The people below have been matched with you through highly advanced photo analysis and our proprietary matching algorithm.</p>

  </div>
</section>

  <div class="row" style="padding: 2%">

    <% @users.each do |u| %>
    <div class="card text-center"style="width: 18rem; margin: 1%; background-color:#e3e2df" >
        <%= link_to user_path(u) do%>
        <%= image_tag u.avatar, class:"rounded-circle", style:"height: 220px; max-width: 200px; margin: 10px" %>
        <%end%>
        <%=form_for :like, url: "/like/#{u.id}", method:"post" do |f| %>
        <label>
          <p class="btn btn-primary" >I like <%= u.name %>!  <%= f.submit "Like", type: :image, src: "/images/SparklingHeart.png", width: "30"%></p>
        </label>
      </br>
    </div>
      <%end%>
      <% end %>
  </div>

  <footer class="text-muted">
    <div class="container">
      <p class="float-right">
        <a href="#">Back to top</a>
      </p>
    </div>
  </footer>
